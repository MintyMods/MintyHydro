{
    "title":"Configuration",
    "padding":10,
    "rows":[
       
       {
          "title":"Grow Cycle:",
          "align":"around",
          "css":"dhx_layout-cell--bordered",
          "gravity":true,
          "padding":10,
          "rows":[
            {
                "cols":[
                    {
                        "type": "datepicker",
                        "labelInline": true,
                        "label": "Start date"
                    },
                    {
                        "type": "datepicker",
                        "labelInline": true,
                        "label": "End date"
                    }
                  ]
            }
          ]
       },
       {
          "title":"Grow Room:",
          "align":"around",
          "css":"dhx_layout-cell--bordered",
          "gravity":true,
          "padding":10,
          "rows":[
            {
                "cols":[
                    {
                        "type": "input",
                        "labelInline": true,
                        "label": "Height (mm)",
                        "icon": "fal fa-arrow-from-bottom",
                        "placeholder": "ltrs",
                        "labelPosition":"left",
                        "labelWidth":"100",
                        "validation":"integer",
                        "maxlength":"10",
                        "value":"2000"  
                    },                    
                    {
                        "type": "input",
                        "labelInline": true,
                        "label": "Width (mm)",
                        "icon": "fal fa-arrows-alt-h",
                        "placeholder": "ltrs",
                        "labelPosition":"left",
                        "labelWidth":"100",
                        "validation":"integer",
                        "maxlength":"10",
                        "value":"1200"  
                    },
                    {
                        "type": "input",
                        "labelInline": true,
                        "label": "Length (mm)",
                        "icon": "fal fa-arrows-alt-v",
                        "placeholder": "ltrs",
                        "labelPosition":"left",
                        "labelWidth":"100",
                        "validation":"integer",
                        "maxlength":"10",
                        "value":"1200"  
                    }

                  ]
            },
            {
                "type": "input",
                "labelInline": true,
                "label": "Resovoir Size (litres)",
                "icon": "fal fa-trash-restore",
                "placeholder": "ltrs",
                "labelPosition":"left",
                "labelWidth":"150",
                "validation":"integer",
                "maxlength":"5",
                "value":"50"                  
            },
            {
                "type": "input",
                "labelInline": true,
                "label": "Light Wattage",
                "icon": "fal fa-lightbulb-on",
                "placeholder": "watts",
                "labelPosition":"left",
                "labelWidth":"150",
                "validation":"integer",
                "maxlength":"5",
                "value":"480"                  
            }
          ]
       },





       {
        "title":"System of Measurement:",
        "align":"around",
        "css":"dhx_layout-cell--bordered",
        "gravity":true,
        "padding":10,
        "rows":[
           {
              "type":"radioGroup",
              "name":"measurements",
              "disabled":true,
              "readonly":true,              
              "gravity":true,
              "options":{
                 "padding":"10px",
                 "cols":[
                    {
                       "type":"radioButton",
                       "label":"Metric",
                       "labelPosition":"left",
                       "value":"metric",
                       "checked":true
                    },
                    {
                       "type":"radioButton",
                       "label":"Imperial",
                       "labelPosition":"left",
                       "value":"imperial"
                    }
                 ]
              }
           }
        ]
     }       
    ]
 }