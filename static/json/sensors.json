{
   "title": "Sensors / Probes",
   "padding": 10,
   "rows": [
      {
         "title": "Water Level Sensors",
         "css": "dhx_layout-cell--bordered dhx_layout-cell--no-border_top",
         "padding": 0,
         "rows": [
            {
               "padding": 0,
               "cols": [
                  {
                     "css": "dhx_widget--border_right",
                     "type": "button",
                     "value": "Reservoir High Water Level",
                     "icon": "fal fa-water-rise",
                     "color": "secondary",
                     "disabled": "true",
                     "full": true,
                     "id": "WLS:RES:HIGH"
                  },
                  {
                     "css": "dhx_widget--border_right",
                     "type": "button",
                     "icon": "fal fa-water-rise",
                     "value": "Tank High Water Level",
                     "color": "secondary",
                     "disabled": "true",
                     "full": true,
                     "id": "WLS:TANK:HIGH"
                  }
               ]
            },
            {
               "padding": 0,
               "cols": [
                  {
                     "css": "dhx_widget--border_right",
                     "type": "button",
                     "value": "Reservoir Low Water Level",
                     "icon": "fal fa-water-lower",
                     "disabled": "true",
                     "color": "secondary",
                     "full": true,
                     "id": "WLS:RES:LOW"
                  },
                  {
                     "css": "dhx_widget--border_right",
                     "type": "button",
                     "icon": "fal fa-water-lower",
                     "value": "Tank Low Water Level",
                     "disabled": "true",
                     "color": "secondary",
                     "full": true,
                     "id": "WLS:TANK:LOW"
                  }
               ]
            }
         ]
      },
      {
         "title": "Water pH (potential of Hydrogen) - Atlas pH Probe",
         "css": "dhx_layout-cell--bordered dhx_layout-cell",
         "rows": [
            {
               "padding": 10,
               "cols": [
                  {
                     "type": "input",
                     "label": "pH :",
                     "icon": "fal fa-dewpoint",
                     "placeholder": "pH",
                     "labelPosition": "left",
                     "labelWidth": "200px",
                     "value": "0.00",
                     "readOnly": "false",
                     "id": "I2C:PH:RESULT"
                  },
                  {
                     "type": "button",
                     "value": "Calibrate",
                     "icon": "fal fa-ballot-check",
                     "size": "medium",
                     "view": "flat",
                     "color": "primary",
                     "id": "CALIBRATE:PH"
                  }
               ]
            }
         ]
      },
      {
         "title": "Water ppm (parts per million) - Atlas Conductivity Probe",
         "css": "dhx_layout-cell--bordered dhx_layout-cell--no-border_top",
         "rows": [
            {
               "padding": 10,
               "rows": [
                  {
                     "type": "input",
                     "label": "E.C. (ppm) :",
                     "icon": "fal fa-heart-rate",
                     "placeholder": "E.C.",
                     "labelPosition": "left",
                     "labelWidth": "200px",
                     "value": "0.00",
                     "readOnly": "false",
                     "id": "I2C:EC:RESULT"
                  },
                  {
                     "type": "button",
                     "value": "Calibrate",
                     "icon": "fal fa-ballot-check",
                     "size": "medium",
                     "view": "flat",
                     "color": "primary",
                     "id": "CALIBRATE:EC"
                  }
               ]
            }
         ]
      },
      {
         "title": "Water Temperature : Atlas Temperature Probe",
         "css": "dhx_layout-cell--bordered dhx_layout-cell--no-border_top",
         "rows": [
            {
               "padding": 10,
               "cols": [
                  {
                     "type": "input",
                     "label": "Water Temp (℃) :",
                     "icon": "fal fa-oil-temp",
                     "placeholder": "Water Temp ℃",
                     "labelPosition": "left",
                     "labelWidth": "200px",
                     "value": "0.00",
                     "readOnly": "false",
                     "id": "I2C:TEMP:RESULT"
                  }
               ]
            }
         ]
      },
      {
         "title": "Environment : Bosch BME280 Sensor",
         "css": "dhx_layout-cell--bordered dhx_layout-cell--no-border_top",
         "rows": [
            {
               "padding": 10,
               "cols": [
                  {
                     "type": "input",
                     "label": "Temperature (℃) :",
                     "icon": "fal fa-heat",
                     "placeholder": "Air Temp ℃",
                     "labelPosition": "left",
                     "labelWidth": "250px",
                     "value": "0.00",
                     "readOnly": "false",
                     "id": "HTS:BME280:TEMP:CELSIUS"
                  }
               ]
            },
            {
               "padding": 10,
               "cols": [
                  {
                     "type": "input",
                     "label": "Relative Humidity (%) :",
                     "icon": "fal fa-humidity",
                     "placeholder": "rh %",
                     "labelPosition": "left",
                     "labelWidth": "250px",
                     "value": "0.00",
                     "readOnly": "false",
                     "id": "HTS:BME280:HUMIDITY:RH"
                  }
               ]
            },
            {
               "padding": 10,
               "cols": [
                  {
                     "type": "input",
                     "label": "Barometer (pressure) :",
                     "icon": "fal fa-wind",
                     "placeholder": "Air Pressure",
                     "labelPosition": "left",
                     "labelWidth": "250px",
                     "value": "0.00",
                     "readOnly": "false",
                     "id": "HTS:BME280:PRESSURE"
                  }
               ]
            }
         ]
      }
   ]
}